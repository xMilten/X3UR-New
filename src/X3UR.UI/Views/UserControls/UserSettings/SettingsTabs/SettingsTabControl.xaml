<UserControl x:Class="X3UR.UI.Views.UserControls.UserSettings.SettingsTabs.SettingsTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:X3UR.UI.Views.UserControls.UserSettings.SettingsTabs"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">
    <Grid>
        <TabControl AutomationProperties.AutomationId="SettingsTab" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TabItem Header="Universum">
                <local:UniverseSettingsTab />
            </TabItem>
            <TabItem Header="Spieler">
                <local:PlayerStartSettingsTab />
            </TabItem>
            <TabItem Header="Debug">
                <!--<local:DebugModeTab />-->
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
